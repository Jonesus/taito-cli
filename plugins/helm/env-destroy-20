#!/bin/bash -e
: "${taito_plugin_path:?}"
: "${taito_project:?}"
: "${taito_target_env:?}"
: "${taito_namespace:?}"

name="${1}"

if taito::confirm_execution "helm" "${name}" \
  "Delete and purge helm release ${taito_project}-${taito_target_env}"
then
  "${taito_cli_path}/plugins/kubectl/util/use-context"
  (
    ${taito_setv:?}
    "${taito_plugin_path}/util/helm" delete --purge \
      "${taito_project}-${taito_target_env}"
  ) || echo "WARNING: Deleting helm release failed. Have you ever deployed?"
fi

taito::call_next "${@}"
