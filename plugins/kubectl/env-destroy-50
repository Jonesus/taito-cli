#!/bin/bash -e
# shellcheck source=lib/all.bash
. "${taito_plugin_path:?}/lib/all.bash"
: "${taito_namespace:?}"

taito::confirm \
  "Delete secrets of namespace ${taito_namespace} from Kubernetes" || \
  taito::skip_to_next "${@}"

kubectl::use_context
kubectl::delete_secrets

taito::call_next "${@}"
