#!/bin/bash -e
: "${taito_plugin_path:?}"

"${taito_plugin_path}/util/use-context"

# Wait until all containers have been deployed
sleep 5
while [[ -n $(kubectl get pods | grep ContainerCreating) ]]
do
  echo "Waiting until all containers have been deployed"
  sleep 5
done
sleep 15

taito::call_next "${@}"
