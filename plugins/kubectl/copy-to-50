#!/bin/bash
: "${taito_util_path:?}"
: "${taito_plugin_path:?}"
: "${taito_namespace:?}"
: "${taito_project:?}"

source="${1:?}"
dest="${2:?}"

"${taito_plugin_path}/util/use-context" && \
. "${taito_plugin_path}/util/determine-pod-container"

(${taito_setv:?}; kubectl cp "${source}" "${pod}:${dest}" -c "${container}")

# Call next command on command chain
"${taito_util_path}/call-next" "${@}"
