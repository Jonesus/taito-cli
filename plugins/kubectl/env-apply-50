#!/bin/bash -e
: "${taito_util_path:?}"
: "${taito_plugin_path:?}"
: "${taito_namespace:?}"

name=${1}

export kubernetes_skip_restart="true";

if "${taito_util_path}/confirm-execution" "kubectl-save-secrets" "${name}" \
  "Save secrets to Kubernetes"
then
  # Make sure that namespace exists
  "${taito_plugin_path}/util/use-context"
  "${taito_plugin_path}/util/ensure-namespace" "${taito_namespace}"

  "${taito_plugin_path}/util/use-context"
  "${taito_plugin_path}/util/save-secrets"
fi

# Call next command on command chain
"${taito_util_path}/call-next" "${@}"
