#!/bin/bash -e
# shellcheck source=lib/all.bash
. "${taito_plugin_path:?}/lib/all.bash"
: "${taito_namespace:?}"

name=${1}

export kubernetes_skip_restart="true";

if taito::confirm_execution "kubectl-save-secrets" "${name}" \
  "Save secrets to Kubernetes"
then
  # Make sure that namespace exists
  kubectl::use_context
  kubectl::ensure_namespace "${taito_namespace}"

  kubectl::use_context
  kubectl::save-secrets
fi

taito::call_next "${@}"
