#!/bin/bash -e
# shellcheck source=lib/all.bash
. "${taito_plugin_path:?}/lib/all.bash"
: "${taito_namespace:?}"

export kubernetes_skip_restart="true"

if taito::confirm_execution "kubectl-secrets" "" \
  "Save newly created secrets to Kubernetes"
then
  # Ensure that namespace exists
  kubectl::use_context
  kubectl::ensure-namespace "${taito_namespace}"

  kubectl::use_context
  kubectl::save_secrets
  export kubernetes_skip_restart="false"
fi

taito::call_next "${@}"
