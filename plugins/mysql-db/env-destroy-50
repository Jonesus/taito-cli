#!/bin/bash -e
# shellcheck source=lib/all.bash
. "${taito_plugin_path:?}/lib/all.bash"

if [[ ${mysql_db_create:-} == "false" ]]; then
  echo "Skipping database destroy: mysql_db_create is false"
elif [[ ${taito_env:?} != "local" ]]; then
  (
    echo "TIP: If connection fails, your db proxy connection might have dropped. In such"
    echo "case, run 'taito env destroy:${taito_env}' again, and skip the steps already executed"
    echo "previously."
    databases=("${taito_target:-$taito_databases}")
    for database in ${databases[@]}; do
      export taito_target="${database}"
      taito::export_database_config "${database}"

      if [[ ${database_type:-} == "mysql" ]] || [[ -z "${database_type}" ]]; then
        if taito::confirm "Delete mysql database ${database_name:?}"; then
          # Create a subshell to contain password
          (
            export database_username=${database_master_username:-root}
            echo "HINT: You can get the ${database_username} user password from:"
            echo "${database_master_password_hint:-}"
            #mysql::ask_and_expose_password
            mysql::drop_database
            mysql::drop_users
          )
        fi
      fi
    done
  )
fi

taito::call_next "${@}"
