#!/bin/bash -e
: "${taito_plugin_path:?}"
: "${taito_namespace:?}"
: "${taito_env:?}"

name=${1}

export docker_compose_skip_restart="true"

if taito::confirm_execution "docker-save-secrets" "${name}" \
  "Save secrets to ./secrets/${taito_env}"
then
  "${taito_plugin_path}/util/save-secrets"
fi

taito::call_next "${@}"
