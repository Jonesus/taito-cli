#!/bin/bash -e
# shellcheck source=lib/all.bash
. "${taito_plugin_path:?}/lib/all.bash"
: "${taito_project:?}"
: "${taito_env:?}"
: "${taito_namespace:?}"

name=${1}

if taito::confirm_execution "docker-delete-secrets" "${name}" \
  "Delete secrets of from ./secrets/${taito_env}"
then
  docker-compose::delete_secrets
fi

taito::call_next "${@}"
