{
  "name": "taito-cli",
  "description": "Taito command line interface",
  "author": "Taito United Oy <support@taitounited.fi>",
  "private": false,
  "license": "MIT",
  "homepage": "https://github.com/TaitoUnited/taito-cli#readme",
  "keywords": [
    "kubernetes",
    "docker",
    "gcloud",
    "aws",
    "azure",
    "cli"
  ],
  "scripts": {
    "__clean": "docker build --no-cache -t taito .",
    "lint": "echo 'TODO lint'",
    "compile": "echo 'TODO compilation if required for some parts'",
    "unit": "taito -- find . -name \"*.bats\" -type f -prune -exec bats '{}' +",
    "test": "echo 'TODO integration tests (cd test; ./all.sh)'",
    "verify": "taito -d lint && taito -d -c compile && taito -d -c unit",
    "check-deps": "npm-check",
    "check-deps:www": "cd www && npm-check",
    "precommit:branch": "if git-branch-is -q test || git-branch-is -q stag || git-branch-is -q master; then echo 'ERROR: You cannot commit changes directly to this environment branch. Only fast-forward merge is allowed.' && echo && exit 1; fi",
    "precommit:lint": "npm run lint",
    "release-pre:prod": "semantic-release --dry-run",
    "release-post:prod": "semantic-release --no-ci"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "if [[ $taito_mode != 'ci' ]]; then npm run precommit:branch && npm run precommit:lint; fi",
      "pre-push": "if [[ $taito_mode != 'ci' ]]; then npm run verify; fi"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "wip",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "revert",
          "build",
          "ci",
          "chore"
        ]
      ]
    }
  },
  "release": {
    "npmPublish": false,
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "feat",
          "release": "minor"
        },
        {
          "type": "fix",
          "release": "patch"
        },
        {
          "type": "docs",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "perf",
          "release": "patch"
        },
        {
          "type": "test",
          "release": "patch"
        },
        {
          "type": "revert",
          "release": "patch"
        },
        {
          "type": "build",
          "release": "patch"
        },
        {
          "type": "ci",
          "release": "patch"
        },
        {
          "type": "chore",
          "release": "patch"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TaitoUnited/taito-cli.git"
  },
  "bugs": {
    "url": "https://github.com/TaitoUnited/taito-cli/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "git-branch-is": "^2.1.0",
    "husky": "^2.1.0",
    "semantic-release": "^15.13.3"
  }
}
